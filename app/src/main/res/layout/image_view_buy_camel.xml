<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view_uploaded7"
            android:layout_width="match_parent"
            android:background="@drawable/image_boundary"
            android:layout_height="320dp">

        </ImageView>
        <TextView
            android:id="@+id/image_view_name7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:text="Name: "
            android:textColor="@color/write"
            android:textSize="18sp">

        </TextView>
        <TextView
            android:id="@+id/image_view_price7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:text="Price: "
            android:textColor="@color/write"
            android:textSize="18sp">
        </TextView>
        <TextView
            android:id="@+id/image_view_height7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="Camel Height: "
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:textColor="@color/write"
            android:textSize="18sp">
        </TextView>

        <TextView
            android:id="@+id/image_view_weight7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:text="Weight: "
            android:textColor="@color/write"
            android:textSize="18sp">
        </TextView>

        <TextView
            android:id="@+id/image_view_detail7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:text="Other Specification: "
            android:textColor="@color/write"
            android:textSize="18sp">
        </TextView>

        <TextView
            android:id="@+id/image_view_S_Name7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:text="Seller Name: "
            android:textColor="@color/write"
            android:textSize="18sp">
        </TextView>

        <TextView
            android:id="@+id/image_view_S_Phone7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:text="Seller Contact: "
            android:textColor="@color/write"
            android:textSize="18sp">
        </TextView>

        <Button
            android:id="@+id/btn_add_cart7"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:text="Add to Cart"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/aclonica"
            android:layout_gravity="center"
            android:background="@drawable/btn">
        </Button>

    </LinearLayout>

</androidx.cardview.widget.CardView>